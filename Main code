from machine import Pin
import time

# --- Setup ---
# Connect the "DO" (Digital Out) pin from the sensor to GPIO 36
# (You can use any GPIO pin that is not ADC-only)
digital_pin = Pin(36, Pin.IN)

print("Starting digital pin test. Press Ctrl+C to stop.")
print("Adjust the potentiometer and make noise.")

# --- Loop ---
try:
    while True:
        # Read the digital value (will be 0 or 1)
        value = digital_pin.value()
        
        print(f"Digital Value: {value}")
        
        # Wait a short time so the console isn't flooded
        time.sleep(0.1)

except KeyboardInterrupt:
    print("Program stopped.")
